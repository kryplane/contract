# ShadowChat Protocol - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK RPC URLs
# =============================================================================
MAINNET_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
GOERLI_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Alternative RPC providers:
# MAINNET_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
# GOERLI_URL=https://eth-goerli.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# =============================================================================
# PRIVATE KEYS (NEVER COMMIT THESE!)
# =============================================================================
PRIVATE_KEY=your_private_key_here
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# =============================================================================
# API KEYS
# =============================================================================
# Etherscan for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Gas reporting
REPORT_GAS=true

# Infura for IPFS (optional)
INFURA_IPFS_PROJECT_ID=your_infura_ipfs_project_id
INFURA_IPFS_PROJECT_SECRET=your_infura_ipfs_project_secret

# Pinata for IPFS (optional)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_api_key

# Web3.Storage for IPFS (optional)
WEB3_STORAGE_API_TOKEN=your_web3_storage_token

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Deployment salt for CREATE2 (optional)
DEPLOYMENT_SALT=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Gas settings
GAS_LIMIT=6000000
GAS_PRICE=20000000000

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
# Discord webhook for deployment notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK

# =============================================================================
# FRONTEND INTEGRATION
# =============================================================================
# IPFS gateway for frontend
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# WebSocket RPC for real-time events
MAINNET_WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_KEY
GOERLI_WS_URL=wss://goerli.infura.io/ws/v3/YOUR_INFURA_KEY

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=true

# Test account mnemonics (for local development only)
TEST_MNEMONIC=test test test test test test test test test test test junk

# Local network settings
LOCAL_RPC_URL=http://127.0.0.1:8545
LOCAL_WS_URL=ws://127.0.0.1:8545

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable additional security features
ENABLE_MULTISIG=false
MULTISIG_OWNERS=0x1234...,0x5678...,0xabcd...
MULTISIG_THRESHOLD=2

# Time delays for sensitive operations (in seconds)
WITHDRAWAL_DELAY=3600  # 1 hour
UPGRADE_DELAY=86400    # 24 hours
WEB3_STORAGE_TOKEN=
